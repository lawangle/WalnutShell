<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".ChooseSourceActivity$DummySectionFragment" >


    <ListView
        android:id="@+id/choose_source_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#00000000"
        android:scrollbars="none"
        android:fadingEdge="vertical" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="10dp"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
           android:id="@+id/button_choose_source_yes"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:background="@color/choose_source_button_backgroud"
            android:textColor="@color/choose_source_button_text"
           android:text="@string/confirm" />    
       
		<TextView 
		    android:layout_width="1dp"
           android:layout_height="match_parent"
           android:background="@color/choose_source_button_line"/>
        <Button
            android:id="@+id/button_choose_source_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/choose_source_button_backgroud"
            android:textColor="@color/choose_source_button_text"
            android:text="@string/cancel" />
    </LinearLayout>

</LinearLayout>