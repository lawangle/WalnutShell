<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp">
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="right"
	    android:background="@color/choose_source_section_backgourd"
	    android:orientation="horizontal" >
	    
		<TextView
	            android:id="@+id/choose_source_item_textview"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="22sp"
	            android:textColor="@color/choose_source_section_name"
	            android:background="@color/choose_source_section_backgourd"
	            android:text="@string/default_title"/>
	
		<CheckBox   
	        android:id="@+id/choose_source_item_cb"  
	        android:layout_width="wrap_content"  
	        android:layout_height="wrap_content"  
	        android:focusable="false"      
	        android:focusableInTouchMode="false"      
	        android:clickable="true" 
	        android:layout_toRightOf="@id/choose_source_item_textview"
	        android:layout_alignParentRight="true"
	        android:background="@color/choose_source_section_backgourd"     
	        android:layout_alignParentTop="true"  
	        android:layout_marginRight="5dip"  
	        />  
	
		
	</RelativeLayout>

</LinearLayout>
